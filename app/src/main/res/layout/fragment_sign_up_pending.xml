<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
            name="vm"
            type="com.xyz.oclock.ui.signup.pending.SignUpPendingViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/sign_up_complete_verify_retry"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:src="@drawable/img_pending_pending"
                    android:src="@{vm.isRequiredReCertifying()? @drawable/img_pending_reject : @drawable/img_pending_pending}" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{vm.isRequiredReCertifying()? @string/please_re_certify : @string/please_wait}"
                android:textColor="@color/white"
                tools:text="@string/please_wait"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="80dp"
                tools:text="@string/pending_description_pending"
                android:text="@{vm.isRequiredReCertifying()? @string/pending_description_reject: @string/pending_description_pending}"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:lineHeight="22sp" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sign_up_complete_verify_retry"
            style="@style/ButtonPrimary"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:text="@string/retry_verify_std_card"
            tools:visibility="gone"
            android:visibility="@{vm.isRequiredReCertifying()? View.VISIBLE : View.GONE}"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="51dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>