<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/btn_primary</item>
        <item name="rippleColor">@color/white_ripple</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">18dp</item>
    </style>
    <style name="OutlinedLoginInputTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColorHint">@color/gray</item>
        <item name="hintTextColor">@color/purple</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="boxBackgroundMode">outline</item>
    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>