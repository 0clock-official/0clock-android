<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--    기본버튼-->
    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/btn_primary</item>
        <item name="rippleColor">@color/white_ripple</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">18dp</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
    </style>
<!--    기본 TextInput-->
    <style name="OutlinedLoginInputTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/activated_white_unactivated_gray</item>
        <item name="hintEnabled">false</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="boxBackgroundMode">outline</item>
    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
    </style>
<!--    기본 스피너-->
    <style name="OClockDefaultSpinner"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/activated_white_unactivated_gray</item>
        <item name="boxBackgroundColor">@color/activated_transparent_unactivated_gray</item>
        <item name="rippleColor">@color/white_ripple</item>
    </style>
</resources>