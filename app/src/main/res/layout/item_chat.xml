<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.xyz.oclock.core.model.ChatType"/>
        <variable
            name="showProfileImg"
            type="Boolean" />
        <variable
            name="chat"
            type="com.xyz.oclock.core.model.Chat" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/chat_u1_layout"
            android:gravity="end"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:background="@drawable/bg_border_stroke_rounded"
                android:id="@+id/chat_u1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:text="@{chat.message}"
                tools:text="가나다라마바사"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/pretendard_regular"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/chat_u2_layout"
            android:gravity="start"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                app:visibility="@{showProfileImg}"
                android:layout_gravity="bottom"
                android:id="@+id/drawer_profile_img"
                android:layout_marginEnd="8dp"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/profile_1"/>
            <TextView
                android:background="@drawable/bg_border_rounded_20dp"
                android:backgroundTint="@color/dark_aqua"
                android:id="@+id/chat_u2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:text="@{chat.message}"
                tools:text="가나다라마바사"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/pretendard_regular"/>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/alert_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:paddingVertical="15dp"
            android:paddingStart="17dp"
            android:paddingEnd="17dp"
            android:background="@drawable/bg_border_rounded_20dp"
            android:backgroundTint="@color/purple"
            android:paddingHorizontal="17dp"
            app:layout_constraintBottom_toTopOf="@+id/chat_textfield"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/alert_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/ic_alarms"/>
                <TextView
                    android:id="@+id/alert_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/waiting_chat_description"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_light"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/alert_button_layout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/alert_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/alert_reject_btn"
                    android:layout_width="60dp"
                    android:layout_height="26dp"
                    android:layout_marginEnd="15dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    android:stateListAnimator="@null"
                    android:backgroundTint="@color/purple"
                    app:cornerRadius="18dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_light"
                    android:text="@string/reject"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/alert_accept_btn"
                    android:layout_width="60dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="15dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    android:stateListAnimator="@null"
                    android:backgroundTint="@color/white"
                    app:cornerRadius="18dp"
                    android:textColor="@color/purple"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_light"
                    android:text="@string/accept"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</layout>